<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/yellow"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/txtEntDiv"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:text="@string/txtEntDiv"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold">
            </TextView>

            <RadioButton
                android:id="@+id/chkRefeicao"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp">
            </RadioButton>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/txtLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="18dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/indicaOutrosOne"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:hint="@string/txtDesc"
                android:textColorHint="@color/black"
                android:singleLine="true"
                android:textSize="17dp"
                android:layout_marginLeft="5dp">
            </EditText>

            <EditText
                android:id="@+id/indicaCustOutrosOne"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:hint="@string/txtEntreDiv"
                android:textColorHint="@color/black"
                android:singleLine="true"
                android:textSize="17dp"
                android:layout_marginLeft="10dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/indicaOutrosTwo"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:hint="@string/txtDesc"
                android:textColorHint="@color/black"
                android:singleLine="true"
                android:textSize="17dp"
                android:layout_marginLeft="5dp">
            </EditText>

            <EditText
                android:id="@+id/indicaCustOutrosTwo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:hint="@string/txtEntreDiv"
                android:textColorHint="@color/black"
                android:singleLine="true"
                android:textSize="17dp"
                android:layout_marginLeft="10dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/indicaOutrosThree"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:hint="@string/txtDesc"
                android:textColorHint="@color/black"
                android:singleLine="true"
                android:textSize="17dp"
                android:layout_marginLeft="5dp">
            </EditText>

            <EditText
                android:id="@+id/indicaCustOutrosThree"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:hint="@string/txtEntreDiv"
                android:textColorHint="@color/black"
                android:singleLine="true"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp">
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnBackEntreDiver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/yellow"
            android:text="@string/txtBack"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
        />


        <Button
            android:id="@+id/btnFinaliza"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/yellow"
            android:text="@string/txtFinish"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
        />


    </LinearLayout>
</ScrollView>

